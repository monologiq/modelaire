{
  "name": "modelaire",
  "displayName": "Modelaire",
  "description": "A simple modal editing extension for VS Code.",
  "publisher": "monologiq",
  "version": "0.0.6",
  "repository": {
    "type": "git",
    "url": "https://github.com/monologiq/vscode-modelaire.git"
  },
  "icon": "images/baudelaire-icon.png",
  "engines": {
    "vscode": "^1.102.0"
  },
  "keywords": [
    "baudelaire",
    "emacs",
    "key",
    "leader",
    "mode",
    "modelaire",
    "vim"
  ],
  "categories": [
    "Keymaps",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "modelaire.enterInsertMode",
        "title": "Enter Insert Mode",
        "category": "Modelaire"
      },
      {
        "command": "modelaire.enterNormalMode",
        "title": "Enter Normal Mode",
        "category": "Modelaire"
      }
    ],
    "keybindings": [
      {
        "command": "modelaire.enterInsertMode",
        "key": "i",
        "when": "modelaire.normal && editorTextFocus"
      },
      {
        "command": "modelaire.enterNormalMode",
        "key": "escape",
        "when": "!modelaire.normal && editorTextFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "modelaire.enterInsertMode",
          "when": "modelaire.normal"
        },
        {
          "command": "modelaire.enterNormalMode",
          "when": "!modelaire.normal"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}